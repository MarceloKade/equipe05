/* LÃ³gico_1: */

CREATE TABLE Usuario (
    Nome VARCHAR(50),
    SobreNome VARCHAR(100),
    Email VARCHAR(100),

    fk_AreaDeInteresse_AreaDeInteresse_PK INT,
    Disponibilidade DATETIME,
    fk_Turno_Turno_PK INT,
    
    Whatsapp VARCHAR(25),
    fk_linguagem_linguagem_PK INT,
    ID_usuario INT PRIMARY KEY
);

CREATE TABLE Newsletter (
    Email VARCHAR(100),
    ID_newsletter INT PRIMARY KEY
);

CREATE TABLE EntreEmContato (
    Nome VARCHAR(50),
    Email VARCHAR(100),
    Mensagem VARCHAR(250),
    ID_entre_em_contato INT PRIMARY KEY
);

CREATE TABLE AreaDeInteresse (
    AreaDeInteresse_PK INT NOT NULL PRIMARY KEY,
    Backend BOOLEAN,
    Frontend BOOLEAN,
    BancoDeDados BOOLEAN,
    UiUxDesinger BOOLEAN,
);

CREATE TABLE Turno (
    Turno_PK INT NOT NULL PRIMARY KEY,
    Matutino BOOLEAN,
    Diurno BOOLEAN,
    Noturno BOOLEAN,

);

CREATE TABLE linguagem (
    linguagem_PK INT NOT NULL PRIMARY KEY,
    Python BOOLEAN,
    JavaScript BOOLEAN,
    Java BOOLEAN,
    Csharp BOOLEAN,
);

CREATE TABLE Cadastrar_Usuario_Newsletter_EntreEmContato (
    fk_Usuario_ID_usuario INT,
    fk_Newsletter_ID_newsletter INT,
    fk_EntreEmContato_ID_entre_em_contato INT
);
 
ALTER TABLE Usuario ADD CONSTRAINT FK_Usuario_2
    FOREIGN KEY (fk_AreaDeInteresse_AreaDeInteresse_PK)
    REFERENCES AreaDeInteresse (AreaDeInteresse_PK)
    ON DELETE SET NULL;
 
ALTER TABLE Usuario ADD CONSTRAINT FK_Usuario_3
    FOREIGN KEY (fk_Turno_Turno_PK)
    REFERENCES Turno (Turno_PK)
    ON DELETE SET NULL;
 
ALTER TABLE Usuario ADD CONSTRAINT FK_Usuario_4
    FOREIGN KEY (fk_linguagem_linguagem_PK)
    REFERENCES linguagem (linguagem_PK)
    ON DELETE SET NULL;
 
ALTER TABLE Cadastrar_Usuario_Newsletter_EntreEmContato ADD CONSTRAINT FK_Cadastrar_Usuario_Newsletter_EntreEmContato_1
    FOREIGN KEY (fk_Usuario_ID_usuario)
    REFERENCES Usuario (ID_usuario)
    ON DELETE NO ACTION;
 
ALTER TABLE Cadastrar_Usuario_Newsletter_EntreEmContato ADD CONSTRAINT FK_Cadastrar_Usuario_Newsletter_EntreEmContato_2
    FOREIGN KEY (fk_Newsletter_ID_newsletter)
    REFERENCES Newsletter (ID_newsletter)
    ON DELETE NO ACTION;
 
ALTER TABLE Cadastrar_Usuario_Newsletter_EntreEmContato ADD CONSTRAINT FK_Cadastrar_Usuario_Newsletter_EntreEmContato_3
    FOREIGN KEY (fk_EntreEmContato_ID_entre_em_contato)
    REFERENCES EntreEmContato (ID_entre_em_contato)
    ON DELETE NO ACTION;